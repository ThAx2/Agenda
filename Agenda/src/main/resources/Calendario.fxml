    <VBox prefHeight="530.0" prefWidth="300.0" spacing="10.0" style="-fx-background-color: #FFFFFF; -fx-background-radius: 9; -fx-padding: 15;">
        
        <Label fx:id="lblDiaSeleccionado" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-text-fill: #333333;" text="Eventos para Viernes, 14 Nov" />
        <Separator />
        
        <TableView fx:id="eventsTodayTable" prefHeight="400.0" prefWidth="270.0" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colHora" prefWidth="70.0" text="Hora">
                    <cellValueFactory><PropertyValueFactory property="hora" /></cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="colEvento" prefWidth="200.0" text="Evento">
                    <cellValueFactory><PropertyValueFactory property="descripcion" /></cellValueFactory>
                </TableColumn>
            </columns>
            <placeholder><Label text="No hay eventos ni clases programadas para este día." /></placeholder>
        </TableView>
        
        <Separator />

        <Button fx:id="btnAddEvento" mnemonicParsing="false" prefWidth="270.0" style="-fx-background-color: #2ECC71; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" text="+ Añadir Evento Personal" />
        
    </VBox>
</HBox>
