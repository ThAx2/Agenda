                <Button mnemonicParsing="false" style="-fx-background-color: transparent;" text="Día" />
                <Button mnemonicParsing="false" style="-fx-background-color: #E0F2F7; -fx-border-color: #2A73B6; -fx-border-width: 1;" text="Semana" />
                <Button mnemonicParsing="false" style="-fx-background-color: transparent;" text="Mes" />
