            <Label style="-fx-font-weight: bold; -fx-padding: 5; -fx-alignment: CENTER;" text="Sábado" GridPane.columnIndex="6" GridPane.rowIndex="0" />

            <AnchorPane style="-fx-background-color: #F4F6F9;" GridPane.columnIndex="0" GridPane.columnSpan="7" GridPane.rowIndex="1" GridPane.rowSpan="8">
                <Label layoutX="10.0" layoutY="10.0" style="-fx-text-fill: #6B6B6B;" text="El horario de clases y eventos se cargará dinámicamente aquí." />
            </AnchorPane>
