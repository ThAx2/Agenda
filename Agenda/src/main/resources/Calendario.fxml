    <VBox prefHeight="530.0" prefWidth="550.0" spacing="10.0" style="-fx-background-color: #FFFFFF; -fx-background-radius: 9; -fx-padding: 10;">
        
        <ToolBar style="-fx-background-color: transparent; -fx-border-color: #D9D9D9; -fx-border-width: 0 0 1 0;">
            <items>
                <Button mnemonicParsing="false" style="-fx-background-color: transparent; -fx-text-fill: #2A73B6; -fx-font-size: 14px;" text="&lt;" />
                <Button mnemonicParsing="false" style="-fx-background-color: transparent; -fx-text-fill: #2A73B6; -fx-font-size: 14px;" text="&gt;" />
                <Button mnemonicParsing="false" style="-fx-background-color: #2A73B6; -fx-text-fill: white; -fx-background-radius: 5;" text="Hoy" />
                
                <Label fx:id="lblFechaActual" style="-fx-font-weight: bold; -fx-font-size: 16px;" text="SEMANA DEL 10 AL 16 DE NOVIEMBRE" HBox.hgrow="ALWAYS">
