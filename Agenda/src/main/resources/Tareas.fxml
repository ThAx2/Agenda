<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="550.0" prefWidth="865.0" spacing="15.0" xmlns="http://javafx.com/javafx/" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controladores.TareasController">
    
    <padding><Insets bottom="10.0" left="10.0" right="10.0" top="10.0" /></padding>
    
    <VBox prefHeight="530.0" prefWidth="480.0" spacing="10.0" style="-fx-background-color: #FFFFFF; -fx-background-radius: 9; -fx-padding: 15;">
        
        <Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #333333;" text="Mis Asignaciones" />
        
        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <TextField fx:id="txtBusquedaTarea" prefWidth="250.0" promptText="Buscar tarea o materia..." />
            <ToggleButton fx:id="btnPendientes" selected="true" style="-fx-background-color: #2A73B6; -fx-text-fill: white; -fx-background-radius: 5;" text="Pendientes" />
            <ToggleButton fx:id="btnCompletadas" style="-fx-background-color: #F4F6F9; -fx-text-fill: #333333; -fx-border-color: #D9D9D9; -fx-border-radius: 5;" text="Completadas" />
        </HBox>

        <TableView fx:id="tasksTable" prefHeight="450.0" prefWidth="450.0" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colMateria" prefWidth="120.0" text="Materia">
                    <cellValueFactory><PropertyValueFactory property="materia" /></cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="colTarea" prefWidth="150.0" text="Tarea">
                    <cellValueFactory><PropertyValueFactory property="titulo" /></cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="colFechaLimite" prefWidth="90.0" text="Fecha Límite">
                    <cellValueFactory><PropertyValueFactory property="fechaLimite" /></cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="colEstado" prefWidth="70.0" text="Estado">
                    <cellValueFactory><PropertyValueFactory property="estado" /></cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="colDetalle" prefWidth="50.0" text="Ver">
                    </TableColumn>
            </columns>
            <placeholder><Label text="No tienes tareas pendientes. ¡Felicidades!" /></placeholder>
        </TableView>
    </VBox>

    <VBox prefHeight="530.0" prefWidth="350.0" spacing="10.0" style="-fx-background-color: #FFFFFF; -fx-background-radius: 9; -fx-padding: 15;">
        
        <Label fx:id="lblTituloTarea" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #333333;" text="Proyecto Final: Sistema de Calificaciones" />
        <Label fx:id="lblMateriaYFecha" style="-fx-font-size: 12px; -fx-text-fill: #6B6B6B;" text="Programación II | Vence: 25 Noviembre">
            <graphic>
                <Label style="-fx-text-fill: #E74C3C; -fx-font-weight: bold; -fx-font-size: 10px;" text="¡VENCE PRONTO!" />
            </graphic>
        </Label>
        
        <Separator />
        
        <Label style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Instrucciones del Profesor" />
        <TextArea fx:id="txtInstrucciones" editable="false" prefHeight="120.0" promptText="Las instrucciones detalladas del profesor aparecerán aquí." wrapText="true" />
        
        <Separator />
        
        <Label style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Tu Trabajo" />
        
        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <Label fx:id="lblArchivoAdjunto" style="-fx-text-fill: #6B6B6B;" text="Ningún archivo adjunto" HBox.hgrow="ALWAYS" />
            <Button fx:id="btnAdjuntarArchivo" mnemonicParsing="false" style="-fx-background-color: #F4F6F9; -fx-text-fill: #333333; -fx-border-color: #D9D9D9; -fx-border-radius: 5;" text="Adjuntar Archivo" />
        </HBox>
        
        <Button fx:id="btnEntregarTarea" mnemonicParsing="false" prefWidth="320.0" style="-fx-background-color: #2A73B6; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" text="ENTREGAR TAREA" />

        <Label style="-fx-font-size: 12px; -fx-text-fill: #6B6B6B;" text="Comentarios privados para el profesor" />
        <TextArea fx:id="txtComentarios" prefHeight="60.0" promptText="Añade un comentario sobre tu entrega..." wrapText="true" />
        
    </VBox>
</HBox>
