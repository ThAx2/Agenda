<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="550.0" prefWidth="865.0" spacing="15.0" xmlns="http://javafx.com/javafx/" xmlns:fx="http://javafx.com/fxml/" fx:controller="Controladores.TramitesController">
    
    <padding><Insets bottom="10.0" left="10.0" right="10.0" top="10.0" /></padding>
    
    <VBox prefHeight="530.0" prefWidth="300.0" spacing="10.0" style="-fx-background-color: #FFFFFF; -fx-background-radius: 9; -fx-padding: 15;">
        <VBox spacing="8.0" VBox.vgrow="ALWAYS">
            
            <Button onAction="#showKardex" prefWidth="300.0" style="-fx-background-color: #2A73B6; -fx-text-fill: white; -fx-font-weight: bold;" text="Kárdex / Historial Académico" />
            
            <Button onAction="#showHorario" prefWidth="300.0" style="-fx-background-color: #3498DB; -fx-text-fill: white; -fx-font-weight: bold;" text="Horario de Clases Actual" />
            
            <Button onAction="#showCargaAcademica" prefWidth="300.0" style="-fx-background-color: #5DADE2; -fx-text-fill: white; -fx-font-weight: bold;" text="Carga Académica (Inscripción)" />

            <Button onAction="#showEstadoCuenta" prefWidth="300.0" style="-fx-background-color: #2ECC71; -fx-text-fill: white; -fx-font-weight: bold;" text="Estado de Cuenta / Pagos" />
            
            <Separator />
            
            <Label style="-fx-font-size: 12px; -fx-text-fill: #6B6B6B;" text="Otros Documentos" />
            
            <Button onAction="#downloadReglamento" prefWidth="300.0" style="-fx-background-color: #BDC3C7; -fx-text-fill: #333333;" text="Descargar Reglamento Escolar" />

        </VBox>
    </VBox>

    <VBox prefHeight="530.0" prefWidth="550.0" spacing="10.0" style="-fx-background-color: #F4F6F9; -fx-background-radius: 9; -fx-padding: 15;">
        <Label fx:id="lblDocumentTitle" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333333;" text="Vista Previa de Kárdex" />
        <Separator />
        
        <ScrollPane fitToWidth="true" style="-fx-background-color: #FFFFFF;" VBox.vgrow="ALWAYS">
            <VBox fx:id="documentContentVBox" spacing="10.0" style="-fx-padding: 10;">
                <Label style="-fx-font-size: 14px; -fx-text-fill: #6B6B6B;" text="Aquí se cargaría dinámicamente el contenido del documento seleccionado (Kárdex, Horario, etc.)." wrapText="true" />
                <TableView prefHeight="350.0" style="-fx-border-color: #D9D9D9;">
                    <columns>
                        <TableColumn prefWidth="150.0" text="Materia" />
                        <TableColumn prefWidth="100.0" text="Período" />
                        <TableColumn prefWidth="80.0" text="Nota Final" />
                        <TableColumn prefWidth="120.0" text="Observaciones" />
                    </columns>
                    <placeholder><Label text="Contenido del Kárdex simulado." /></placeholder>
                </TableView>
            </VBox>
        </ScrollPane>
        
        <Button onAction="#downloadDocument" prefWidth="250.0" style="-fx-background-color: #2ECC71; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" text="Descargar Documento Actual (PDF)" />

    </VBox>
</HBox>